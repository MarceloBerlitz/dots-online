        "module": "CommonJS",
        "noImplicitAny": true,
        "target": "ES5",
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "outDir": "../build",
        "sourceMap": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}